<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.team12.view.restockProducts.RestockProductsActivity">

    <Button
        android:id="@+id/restock_products_restock_button"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/button"
        android:text="@string/restock_products_restock_button"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restock_products_quantity"
        app:layout_constraintVertical_bias="0.100000024" />

    <EditText
        android:id="@+id/restock_products_quantity_field"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="number"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toBottomOf="@+id/restock_products_quantity"
        app:layout_constraintEnd_toEndOf="@+id/restock_products_batch_field"
        app:layout_constraintStart_toStartOf="@+id/restock_products_batch_field" />

    <EditText
        android:id="@+id/restock_products_batch_field"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="BatchID"
        android:inputType="number"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toBottomOf="@+id/restock_products_batch"
        app:layout_constraintEnd_toEndOf="@+id/restock_products_EOF_field"
        app:layout_constraintStart_toStartOf="@+id/restock_products_EOF_field" />

    <TextView
        android:id="@+id/restock_products_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/restock_products_header"
        android:textColor="@color/text"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restock_products_EOF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:text="@string/restock_products_EOF"
        android:textColor="@color/text"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restock_products_header" />

    <TextView
        android:id="@+id/restock_products_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/restock_products_quantity"
        android:textColor="@color/text"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/restock_products_batch"
        app:layout_constraintTop_toBottomOf="@+id/restock_products_batch" />

    <TextView
        android:id="@+id/restock_products_batch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/restock_products_batch"
        android:textColor="@color/text"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/restock_products_EOF"
        app:layout_constraintTop_toBottomOf="@+id/restock_products_EOF" />

    <EditText
        android:id="@+id/restock_products_EOF_field"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="EOF #"
        android:inputType="number"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toBottomOf="@+id/restock_products_EOF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/restock_products_EOF" />

</androidx.constraintlayout.widget.ConstraintLayout>
